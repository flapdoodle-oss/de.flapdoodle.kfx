<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="de" level="ERROR" />
    <logger name="de.flapdoodle.kfx" level="INFO" />
    <logger name="de.flapdoodle.kfx.logging" level="DEBUG" />
    <logger name="de.flapdoodle.kfx.controls.grapheditor" level="DEBUG" />

</configuration>